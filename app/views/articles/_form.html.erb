<%= render 'shared/errors', object: @article %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for @article , html: {class: "form-horizontal", role: "form"} do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Titre de l'article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Contenu de l'article" %>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-8  ">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <%= cb.label(class: "checkbox-inline input_checkbox") do %>
                <%= cb.check_box(class: "checkbox") + cb.text %>
                <span class="checkmark"></span>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit @article.new_record? ? "Créer" : "Modifier" , class: 'btn btn-primary btn-lg'%>
        </div>
      </div>


    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Annuler et retourner à la liste d'articles", articles_path%> ]
    </div>
  </div>
</div>
