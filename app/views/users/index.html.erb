<h1 align="center">Liste de tous les utilisateurs</h1>

<div align="center">
  <%= will_paginate @users %>
  <% @users.each do |user|%>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li>
            <%= link_to gravatar_for(user), user_path(user) %>
          </li>
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <% if logged_in? and current_user.admin? %>
            <li><%= link_to "Supprimer cet utilisateur", user_path(user), method: :delete,
                    data: { confirm: "ÃŠtes-vous sÃ»r de vouloir supprimer cet utilisateur ainsi que tous ses articles?"} %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate @users %>
</div>
